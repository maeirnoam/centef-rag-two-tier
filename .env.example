# CENTEF RAG System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Project Configuration
PROJECT_ID=your-project-id

# Vertex AI Search (Discovery Engine)
VERTEX_SEARCH_LOCATION=global
GENERATION_LOCATION=us-central1

# Discovery Engine Configuration
DISCOVERY_DATASTORE=projects/your-project-id/locations/global/collections/default_collection/dataStores/your-chunk-datastore
DISCOVERY_SERVING_CONFIG=projects/your-project-number/locations/global/collections/default_collection/engines/your-search-app/servingConfigs/default_config

# Datastore IDs (include the full ID with _gcs_store suffix)
CHUNKS_DATASTORE_ID=your-chunk-datastore-id_gcs_store
SUMMARIES_DATASTORE_ID=your-summaries-datastore-id_gcs_store

# Google Cloud Storage Buckets
SOURCE_BUCKET=your-sources-bucket
TARGET_BUCKET=your-chunks-bucket
SOURCE_DATA_PREFIX=gs://your-sources-bucket/data
CHUNKS_BUCKET=gs://your-chunks-bucket

# Manifest Path
MANIFEST_PATH=gs://your-sources-bucket/manifest/manifest.jsonl

# Gemini Configuration
SUMMARY_MODEL=gemini-2.5-flash
GEMINI_MODEL=gemini-2.0-flash-exp

# Chat History Configuration
CHAT_HISTORY_BUCKET=your-sources-bucket
CHAT_HISTORY_PATH=chat_history

# User Management Configuration
USER_DATA_BUCKET=your-sources-bucket
USER_DATA_PATH=users/users.jsonl

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=60
API_KEY_HEADER=X-API-Key
VALID_API_KEYS=your-api-key-1,your-api-key-2

# ASR provider for AV ingestion (google | 11labs)
ASR_PROVIDER=google

# API Configuration
PORT=8080
